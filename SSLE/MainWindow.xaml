<Window x:Class="SSLE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSLE"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" Background="#ECCAFF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Top buttons panel -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Background="#7D34A6" Orientation="Horizontal">
            <Button Name="addEquationButton" Width="100" 
                    Background="#7D34A6" Foreground="White" 
                    BorderThickness="1" Content="Add equation"></Button>
        </StackPanel>
    </Grid>
</Window>
